<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabButton" parent="NoButtonRadioButton">

        <item name="android:background">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:drawablePadding">1dp</item> <!-- 设置图与文字间距 -->
        <item name="android:button">@null</item>
    </style>

    <style name="NoButtonRadioButton">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="checkbox_style">
        <item name="android:background">@drawable/msg_tab_widget_sharp</item>
        <item name="android:button" >@null</item>
        <item name="android:textColor">#ff888888</item>
        <item name="android:textSize" >16sp</item>
        <item name="android:gravity" >center</item>
    </style>


    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--toolbar替代actionbar后必须设置主题为NoActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="editText_base">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">@dimen/normalButtonHeight</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/border_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@null</item>

    </style>


    <style name="line">
        <item name="android:background">@color/bg_color</item>
    </style>
    <style name="line_vertical" parent="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>



    </style>

    <style name="line_horizontal" parent="line">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>

        <item name="android:layout_gravity">center_horizontal</item>

    </style>


    <style name="smallButton">
        <item name="android:textSize">@dimen/smallButtonTextSize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/smallPadding</item>
        <item name="android:paddingRight">@dimen/smallPadding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/smallButtonWidth</item>
        <item name="android:minHeight">@dimen/smallButtonHeight</item>
    </style>


    <style name="smallGreenButton" parent="@style/smallButton">
        <item name="android:background">@drawable/bg_btn_style_green</item>
    </style>


    <style name="psych_radio_style">
        <item name="android:button">@drawable/psych_radio_style</item>
    </style>

</resources>
