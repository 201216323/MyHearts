<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_oration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/home_title_color">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/datepicker_header_height"
            android:layout_height="@dimen/datepicker_header_height"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/text_size"
            android:background="@drawable/ic_back"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="咨讯"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"/>

    </RelativeLayout>

    <com.cjj.MaterialRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/oration_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </com.cjj.MaterialRefreshLayout>


</LinearLayout>
