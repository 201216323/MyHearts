<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/ll_rote"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@drawable/ic_back_new"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="心事详情"
            android:textSize="@dimen/x18"/>


        <ImageView
            android:id="@+id/ic_report"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:src="@drawable/img_lisks_more"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ruolan.com.myhearts.widget.MyScrollview
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/x10">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_tour"
                                android:layout_width="@dimen/x40"
                                android:layout_height="@dimen/x40"/>

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_toRightOf="@+id/iv_tour"
                                android:maxEms="9"
                                android:maxLines="1"
                                android:text="陈超明"
                                android:textSize="@dimen/x18"/>

                            <TextView
                                android:id="@+id/tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="10-22 12-15"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/x3"
                                android:layout_toLeftOf="@+id/tv_time"
                                android:background="@drawable/live_time_icon"/>

                            <ImageView
                                android:id="@+id/image_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/x10"
                                android:layout_toRightOf="@+id/tv_name"
                                android:background="@drawable/tucao_man"/>

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x10"
                            android:layout_marginTop="@dimen/x10"
                            android:ellipsize="end"
                            />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.lzy.ninegrid.NineGridView
                                android:id="@+id/nineGrid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                app:ngv_gridSpacing="3dp"
                                app:ngv_maxSize="9"
                                app:ngv_mode="grid"
                                app:ngv_singleImageRatio="1"
                                app:ngv_singleImageSize="250dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x20"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_type"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20"
                                android:background="@drawable/userdynamic_type"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x5"
                                android:layout_toRightOf="@+id/iv_type"
                                android:text="其他"
                                android:textSize="@dimen/x14"/>

                            <TextView
                                android:id="@+id/tv_comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="0"/>

                            <ImageView
                                android:id="@+id/iv_comment"
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_toLeftOf="@+id/tv_comment_count"
                                android:background="@drawable/commen_icon_de"/>

                            <TextView
                                android:id="@+id/tv_view_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_toLeftOf="@+id/iv_comment"
                                android:text="34"/>

                            <ImageView
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x20"
                                android:layout_marginRight="@dimen/x10"
                                android:layout_toLeftOf="@+id/tv_view_count"
                                android:background="@drawable/tucao_view"/>
                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1px"-->
                <!--android:background="@color/divider" />-->

                <LinearLayout
                    android:id="@+id/re_comment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="22"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30px"
                        android:layout_below="@+id/recycler_view"
                        android:background="@color/divider"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/x20"
                            android:layout_marginTop="@dimen/x5"
                            android:padding="@dimen/x10"/>
                    </RelativeLayout>


                </LinearLayout>
            </LinearLayout>

        </ruolan.com.myhearts.widget.MyScrollview>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
